        </event>
    </interface>

    <interface name="anodium_workspace_manager" version="1">
        <description summary=""></description>

        <event name="output">
            <description summary="a output has been created"></description>
            <arg name="output" type="new_id" interface="anodium_output" />
        </event>
    </interface>
